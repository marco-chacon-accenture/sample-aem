<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Title"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.wcm.components.title.v2.editor]"
          helpPath="https://www.adobe.com/go/aem_cmp_title_v2"
          trackingFeature="core-components:title:v2">
    <content
            jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                    jcr:primaryType="nt:unstructured"/>
                                            <types
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Heading Level"
                                                    sling:orderBefore="title"
                                            />
                                            <defaulttypes
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Heading Level"/>
                                            <alignment
                                                    granite:class="core-title-sizes-default"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Title Alignment"
                                                    name="./alignment">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Left"
                                                            value="left"/>
                                                    <center
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Center"
                                                            value="center"/>
                                                    <right
                                                            jcr:primaryType="nt:unstructured"
                                                            text="right"
                                                            value="right"/>

                                                </items>
                                            </alignment>
                                            <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideResource="true"/>
                                            <id
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideResource="true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>